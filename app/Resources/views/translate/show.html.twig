{% extends 'base.html.twig' %}

{% block body %}
    <h1>Translate</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ translate.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Mum'|trans }}</th>
                <td>{{ translate.mum }}</td>
            </tr>
            <tr>
                <th>{% trans %}Dad{% endtrans %}</th>
                <td>{{ translate.dad }}</td>
            </tr>
            <tr>
                <th>{% trans %}Brother{% endtrans %}</th>
                <td>{{ translate.brother }}</td>
            </tr>
            <tr>
                <th>{% trans %}Sister{% endtrans %}</th>
                <td>{{ translate.sister }}</td>
            </tr>
            <tr>
                <th>{% trans %}Dog{% endtrans %}</th>
                <td>{{ translate.dog }}</td>
            </tr>
            <tr>
                <th>{% trans %}Cat{% endtrans %}</th>
                <td>{{ translate.cat }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('translate_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('translate_edit', { 'id': translate.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
